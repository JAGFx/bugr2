{% import 'shared/_currency.macro.html.twig' as currency %}

{% for cashFlow in cashFlows %}
    <li class="list-group-item d-flex justify-content-between align-items-center ms-2 ">
        <div class="me-2"><small>{{ currency.amount(cashFlow.cashFlow, true) }}</small></div>
        <div><small>{{ cashFlow.account.name }}</small></div>
        <div class="position-absolute" style="right: -1rem">
            <div class="dropstart">
                <button type="button" class="btn dropdown-toggle text-secondary border-0" data-bs-toggle="dropdown"
                        aria-expanded="false">
                    <i class="fa-solid fa-ellipsis-vertical"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-dark">
                    {% if budget.positiveCashFlow or budget.negativeCashFlow %}
                        <li><a class="dropdown-item" data-turbo="true"
                               href="{{ path('front_budget_balancing', {
                                   'budgetId': budget.id,
                                   'accountId': cashFlow.account.id,
                               }) }}">Ã‰quilibrer</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </li>
{% endfor %}
