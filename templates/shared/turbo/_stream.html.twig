<twig:Turbo:Stream:Append target="toast_container">
    <template>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                {% include 'shared/toast/_item.html.twig' with {type: label } %}
            {% endfor %}
        {% endfor %}
    </template>
</twig:Turbo:Stream:Append>

{% block stream %}{% endblock %}